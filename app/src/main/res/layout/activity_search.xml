<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="14dp"
        android:paddingBottom="24dp"
        tools:ignore="RtlSymmetry,UseCompoundDrawables,UselessParent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/arrow_left" />

        <TextView
            style="@style/HeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="@string/search" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/medium_padding">


        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:drawableStart="@drawable/search_for_search_activity"
            android:drawablePadding="9dp"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_medium"
            android:freezesText="true"
            android:hint="@string/search"
            android:inputType="text"
            android:lines="1"
            android:paddingStart="13dp"
            android:paddingEnd="30dp"
            android:textFontWeight="400"
            android:textSize="@dimen/text_size_middle"
            tools:ignore="RtlSymmetry" />

        <ImageButton
            android:id="@+id/btn_clear"
            android:layout_width="@dimen/button_clear_size"
            android:layout_height="@dimen/button_clear_size"
            android:layout_gravity="end"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/cross"
            android:textSize="20sp"
            android:visibility="invisible" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingVertical="@dimen/medium_padding">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="10"
            tools:listitem="@layout/track_item" />

    </LinearLayout>

</LinearLayout>