<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="14dp"
        android:orientation="horizontal"
        tools:ignore="RtlSymmetry,UseCompoundDrawables,UselessParent">

        <ImageButton
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/arrow_left"
            android:id="@+id/btn_back" />

        <TextView style="@style/HeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="@string/settings" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/medium_padding"
        android:paddingTop="40dp">

        <Switch
            android:id="@+id/switch_night_mode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttons_height"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/dark_theme"
            android:textFontWeight="400"
            android:textSize="@dimen/text_size_middle"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Button
            android:id="@+id/btn_share_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttons_height"
            style="@style/SettingsButtonStyle"
            android:text="@string/share_app"
            app:icon="@drawable/share_app" />

        <Button
            android:id="@+id/btn_send_to_support"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttons_height"
            style="@style/SettingsButtonStyle"
            android:text="@string/write_support"
            app:icon="@drawable/support" />

        <Button
            android:id="@+id/btn_license_agreement"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttons_height"
            style="@style/SettingsButtonStyle"
            android:text="@string/user_agreement"
            app:icon="@drawable/bracket_right" />

    </LinearLayout>

</LinearLayout>