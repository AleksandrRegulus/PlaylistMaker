<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MainTheme.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item>

        <item name="android:background">@color/black</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="SettingsTheme.Theme.PlaylistMaker" parent="Main.Theme.PlaylistMaker">
        <item name="colorPrimary">@color/black</item>       <!--системная часть экрана-->
        <item name="colorOnPrimary">@color/white</item>     <!--текст кнопок-->
        <item name="colorPrimaryVariant">@color/black</item> <!-- для стрелочки и фона кнопок-->
        <item name="hintTextColor">@color/grey</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchTheme.Theme.PlaylistMaker" parent="Main.Theme.PlaylistMaker">
        <item name="colorPrimary">@color/black</item>       <!--системная часть экрана-->
        <item name="colorOnPrimary">@color/white</item>     <!--текст кнопок-->
        <item name="colorPrimaryVariant">@color/white</item> <!-- для стрелочки и фона кнопок-->
        <item name="hintTextColor">@color/white</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:editTextBackground">@drawable/rounded_edittext_dark</item>
    </style>

    <style name="ArtistTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlaceholderButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DarkThemeSwitchChekedColor" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="DarkThemeSwitchTextColor" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>