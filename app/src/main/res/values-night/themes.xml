<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MainTheme.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item>

        <item name="android:background">@color/black</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="SettingsTheme.Theme.PlaylistMaker" parent="Main.Theme.PlaylistMaker">
        <item name="colorPrimary">@color/black</item>       <!--системная часть экрана-->
        <item name="colorOnPrimary">@color/white</item>     <!--текст кнопок-->
        <item name="colorPrimaryVariant">@color/black</item> <!-- для стрелочки и фона кнопок-->

        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchTheme.Theme.PlaylistMaker" parent="Main.Theme.PlaylistMaker">
        <item name="colorPrimary">@color/black</item>       <!--системная часть экрана-->
        <item name="colorOnPrimary">@color/white</item>     <!--текст кнопок-->
        <item name="colorPrimaryVariant">@color/black</item> <!-- для стрелочки и фона кнопок-->
        <item name="android:editTextColor">@color/black</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:editTextBackground">@drawable/rounded_edittext_dark</item>
    </style>
</resources>