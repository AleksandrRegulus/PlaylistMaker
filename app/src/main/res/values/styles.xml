<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/main_buttons_radius</item>
        <item name="android:insetTop">@dimen/buttons_inset_zero</item>
        <item name="android:insetBottom">@dimen/buttons_inset_zero</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icons_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="HeaderTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PlayerTextViewGrey" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="PlayerTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MediaTabLayoutTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceInactive">@style/TextStyleBNV.Inactive</item>
        <item name="itemTextAppearanceActive">@style/TextStyleBNV.Active</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="TextStyleBNV.Inactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextStyleBNV.Active" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>


    <style name="PlaylistEditText" parent="@android:style/Widget.EditText">
        <item name="android:ellipsize">end</item>
        <item name="android:freezesText">true</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
    </style>

    <style name="PlaylistsTextView" parent="@android:style/Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Theme.MyApp.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:background">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogText</item>
    </style>

    <style name="MaterialAlertDialogText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">3</item>
        <item name="android:singleLine">false</item>
    </style>

</resources>