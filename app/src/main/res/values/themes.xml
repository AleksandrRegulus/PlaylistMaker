<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Main.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>      <!--системная часть экрана-->
        <item name="colorPrimaryVariant">@color/white
        </item>      <!-- для стрелочки и фона кнопок-->
        <item name="colorOnPrimary">@color/black</item>   <!--текст кнопок-->
        <item name="android:colorControlActivated">@color/blue
        </item>  <!-- switch активирован всегда синий-->
        <item name="hintTextColor">@color/grey</item>
        <!-- Secondary brand color. -->

    </style>

    <style name="MainTheme.Theme.PlaylistMaker" parent="Main.Theme.PlaylistMaker">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="SettingsTheme.Theme.PlaylistMaker" parent="Main.Theme.PlaylistMaker">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchTheme.Theme.PlaylistMaker" parent="Main.Theme.PlaylistMaker">
        <item name="android:background">@color/white</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:editTextBackground">@drawable/rounded_edittext</item>
        <item name="colorPrimaryVariant">@color/black</item> <!-- для стрелочки и фона кнопок-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="ArtistTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="PlaceholderButton" >
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

</resources>